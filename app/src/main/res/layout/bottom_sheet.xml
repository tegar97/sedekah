<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <TextView
        android:id="@+id/donate_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Jumlah Donasi" />

    <EditText
        android:id="@+id/input_donate_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/donate_example"
        android:inputType="number"
        android:labelFor="@id/donate_amount" />

    <Button
        android:id="@+id/btn_donate_now"
        android:layout_width="match_parent"
        style="@style/Widget.Material3.Button.ElevatedButton"

        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_primary"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="@string/donasi_sekarang" />
</LinearLayout>